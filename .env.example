# agent-workshop Environment Configuration
# Copy this file to .env.development or .env.production and configure

# Environment (development, staging, production)
AGENT_WORKSHOP_ENV=development

# Claude Agent SDK Settings (for development)
CLAUDE_SDK_ENABLED=true
# Options: opus, sonnet, haiku
CLAUDE_MODEL=sonnet

# Anthropic API Settings (for production)
# Get your key from: https://console.anthropic.com/
ANTHROPIC_API_KEY=your_anthropic_api_key_here
ANTHROPIC_MODEL=claude-sonnet-4-20250514
ANTHROPIC_MAX_TOKENS=4096

# OpenAI Settings (optional alternative provider)
# OPENAI_API_KEY=your_openai_api_key_here
# OPENAI_MODEL=gpt-4-turbo-preview

# Langfuse Observability (recommended)
# Sign up at: https://cloud.langfuse.com
LANGFUSE_ENABLED=true
LANGFUSE_PUBLIC_KEY=your_public_key_here
LANGFUSE_SECRET_KEY=your_secret_key_here
LANGFUSE_HOST=https://cloud.langfuse.com
LANGFUSE_DEBUG=false
# Sample rate for tracing (0.0-1.0)
LANGFUSE_SAMPLE_RATE=1.0

# LangGraph Settings
# Options: memory, postgres, sqlite
LANGGRAPH_CHECKPOINTER=memory
# LANGGRAPH_POSTGRES_URL=postgresql://user:pass@localhost/db

# General Settings
DEBUG=false
# Options: DEBUG, INFO, WARNING, ERROR
LOG_LEVEL=INFO
